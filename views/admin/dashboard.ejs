<div class="admin_title">
    <h2>Posts</h2>
    <a href="/add-post" class="btn">Novo Post</a>
</div>

<ul class="admin_posts">

    <% data.forEach(post => { %>

        <li>
            <b><%= post.title %></b>
            <div class="admin_post_controls">
                <a href="/edit-post/<%= post._id %>" class="btnedt">Editar</a>

                <form action="/delete-post/<%= post._id %>?_method=DELETE" method="POST">
                    <input type="submit" value="Apagar" class="btndel">
                </form>
            </div>
        </li>

    <% }) %>

</ul>